<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activity.BookingListActivity"
  tools:layout_editor_absoluteY="81dp">

  <android.support.design.widget.TabLayout
    android:id="@+id/booking_list_tab_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintBottom_toTopOf="@+id/listview_booking_list"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tabIndicatorColor="@color/design_default_color_primary"
    app:tabSelectedTextColor="@color/colorPrimary"
    app:tabTextAppearance="@style/TabLayoutStyle1"
    app:tabTextColor="?attr/colorButtonNormal">

    <android.support.design.widget.TabItem
      android:id="@+id/unconfirmed_tab_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="unconfirmed" />

    <android.support.design.widget.TabItem
      android:id="@+id/confirmed_tab_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Confirmed" />

    <android.support.design.widget.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Done" />

    <android.support.design.widget.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Deny" />
  </android.support.design.widget.TabLayout>

  <ListView
    android:id="@+id/listview_booking_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/booking_list_tab_layout" />
</android.support.constraint.ConstraintLayout>